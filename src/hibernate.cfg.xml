<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle8iDialect</property>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521/ORCLPDB1.localdomain</property>
        <property name="hibernate.connection.username">hr</property>
        <property name="hibernate.connection.password">hr</property>
        <property name="hibernate.show_sql">true</property>

        <!--Mapping-->
<!--        <mapping resource="domain/departments.hbm.xml"/>-->
<!--        <mapping resource="domain/departmentInfo.hbm.xml"/>-->
        <mapping class="domain.Departments"/>
        <mapping class="domain.DepartmentInfo"/>

    </session-factory>
</hibernate-configuration>